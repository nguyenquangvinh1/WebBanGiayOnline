              function calculateFee() {
            var provinceId = $("#tinh").val();
            var districtId = $("#huyen").val();
            var wardCode = $("#xa").val();

            let subtotal =  @(Model.Sum(p => p.ThanhTienGG) > 0
                                ? Model.Sum(p => p.ThanhTienGG)
                                : Model.Sum(p => p.ThanhTien));
                                let errorSpan = document.getElementById("addressError");
            if (provinceId =="" && districtId == "" && wardCode == "") {
                errorSpan.textContent("Vui lòng chọn đầy đủ địa chỉ.");
                return;
            }

           var requestData = {
        from_district_id: 3440,
        from_ward_code: "13009",
        service_id: 53320,
        service_type_id: null,
        to_district_id: parseInt(districtId),
        to_ward_code: wardCode,
        height: 50,
        length: 20,
        weight: 200,
        width: 20,
        provinceId: provinceId,
        subtotal: subtotal,
        insurance_value: 10000,
        cod_failed_amount: 2000,
        coupon: null,
       

            };
     
            console.log("Gửi dữ liệu:", requestData);

            $.ajax({
                url: '@Url.Action("GetShippingFee", "Cart")',
                type: "POST",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(requestData),
                dataType: "json",
                success: function(response) {

                    if(provinceId !=  201){
                         
                        response.ship = 50000;
                    }
                    if(subtotal > 2000000)
                   {
                       response.ship = 0;
                   }
                     let total = response.ship + subtotal;
                    console.log("Nhận phản hồi:", response); 
                    if (response.success) {
                        $("#fee").text(response.ship.toLocaleString() + " VNĐ");
                        $("#totalWithFee").text( total.toLocaleString() + " VNĐ");
                    } else {
                        alert(response.message);
                    }
                },
                error: function(xhr) {
                    console.error("Lỗi chi tiết:", xhr.responseText);
                    alert("Có lỗi xảy ra khi tính phí vận chuyển.");
                }
            });
        }

       

