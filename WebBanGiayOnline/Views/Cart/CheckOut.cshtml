@section Scripts {
    <script>
              document.addEventListener("DOMContentLoaded", function () {
            let tenKhachHangInput = document.querySelector("input[name='TenKhachHang']");
            if (tenKhachHangInput) {
                tenKhachHangInput.addEventListener("blur", function () {
                    if (this.value.trim() === "") {
                        alert("Tên khách hàng không được để trống!");
                        setTimeout(() => { this.focus(); }, 3);
                    }
                });
            }

            let phoneInput = document.querySelector("input[name='Sdt']");
            if (phoneInput) {
                phoneInput.addEventListener("blur", function () {
                    let phonePattern = /^[0-9]{10,11}$/;
                    let errorSpan = document.getElementById("phoneError");

                    if (!phonePattern.test(this.value.trim())) {
                        errorSpan.textContent = "Số điện thoại không hợp lệ! (10-11 số)";
                    } else {
                        errorSpan.textContent = "";
                    }
                });
            }
        });



              function calculateFee() {
            var provinceId = $("#tinh").val();
            var districtId = $("#huyen").val();
            var wardCode = $("#xa").val();
           
            let subtotal = @Model.Sum(p => p.ThanhTien);
            if (provinceId =="" && districtId == "" && wardCode == "") {
                alert("Vui lòng chọn đầy đủ địa chỉ.");
                return;
            }

           var requestData = {
        from_district_id: 3440,
        from_ward_code: "13009",
        service_id: 53320,
        service_type_id: null,
        to_district_id: parseInt(districtId),
        to_ward_code: wardCode,
        height: 50,
        length: 20,
        weight: 200,
        width: 20,
        insurance_value: 10000,
        cod_failed_amount: 2000,
        coupon: null,
       

            };
     
            console.log("Gửi dữ liệu:", requestData); // Debug dữ liệu gửi đi

            $.ajax({
                url: '@Url.Action("GetShippingFee", "Cart")',
                type: "POST",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(requestData),
                dataType: "json",
                success: function(response) {

                    if(provinceId !=  201){
                         
                        response.ship = 50000;
                    }
                    if(subtotal > 2000000)
                   {
                       response.ship = 0;
                   }
                     let total = response.ship + subtotal;
                    console.log("Nhận phản hồi:", response); // Debug phản hồi
                    if (response.success) {
                        $("#fee").text(response.ship.toLocaleString() + " VNĐ");
                        $("#totalWithFee").text( total.toLocaleString() + " VNĐ");
                    } else {
                        alert(response.message);
                    }
                },
                error: function(xhr) {
                    console.error("Lỗi chi tiết:", xhr.responseText);
                    alert("Có lỗi xảy ra khi tính phí vận chuyển.");
                }
            });
        }

       

        // Load danh sách tỉnh/huyện/xã
       
                   function loadProvinces() {
            $.ajax({
                url: "https://online-gateway.ghn.vn/shiip/public-api/master-data/province",
                type: "GET",
                headers: { "Token": "be4fd050-0497-11f0-b971-3a146ce707b3" },
                success: function (response) {
                    var provinces = response.data;
                    $("#tinh").empty().append('<option value="">Chọn Tỉnh/Thành phố</option>');
                    provinces.forEach(function (province) {
                        $("#tinh").append(`<option value="${province.ProvinceID}">${province.ProvinceName}</option>`);
                    });
                },
                error: function () {
                    alert("Lỗi khi tải danh sách tỉnh/thành phố.");
                }
            });
        }

        // Gọi hàm khi trang tải
        $(document).ready(function() {
            loadProvinces();
        });

              $("#tinh").change(function () {
            var provinceId = $(this).val();
            if (!provinceId) return;

            $.ajax({
                url: "https://online-gateway.ghn.vn/shiip/public-api/master-data/district",
                type: "GET",
                headers: { "Token": "be4fd050-0497-11f0-b971-3a146ce707b3" },
                data: { "province_id": provinceId },
                success: function (response) {
                    var districts = response.data;
                    $("#huyen").empty().append('<option value="">Chọn Quận/Huyện</option>');
                    districts.forEach(function (district) {
                        $("#huyen").append(`<option value="${district.DistrictID}">${district.DistrictName}</option>`);
                    });
                },
                error: function () {
                    alert("Lỗi khi tải danh sách quận/huyện.");
                }
            });
        });
                $("#huyen").change(function () {
            var districtId = $(this).val();
            if (!districtId) return;

            $.ajax({
                        url: "https://online-gateway.ghn.vn/shiip/public-api/master-data/ward?districtId",
                type: "GET",
                headers: { "Token": "be4fd050-0497-11f0-b971-3a146ce707b3" },
                data: { "district_id": districtId },
                success: function (response) {
                    var wards = response.data;
                    $("#xa").empty().append('<option value="">Chọn Xã/Phường</option>');
                    wards.forEach(function (ward) {
                        $("#xa").append(`<option value="${ward.WardCode}">${ward.WardName}</option>`);
                    });
                },
                error: function () {
                    alert("Lỗi khi tải danh sách xã/phường.");
                }
            });
        });




       
   


    </script>

