        function loadCustomerInfo(customerId) {
            $.ajax({
                url: '/KhachHang/GetThongTinKhachHang', // ✅ Đổi tên controller nếu khác
                type: 'GET',
                data: { id: customerId },
                success: function (response) {
                    if (!response) return;

                    console.log(response);
                    // ✅ Gán dữ liệu vào form
                    $('input[name="TenKhachHang"]').val(response.name);
                    $('input[name="Email"]').val(response.email);
                    $('input[name="Sdt"]').val(response.phone);
                    $('input[name="fulldiachi"]').val(response.address);

                    const cleanName = (str) => str.replace(/^Tỉnh\s+|^Thành phố\s+/i, "").trim();
                    const userProvince = cleanName(response.province);
                    const userDistrict = response.district;
                    const userWard = response.ward;

                    setTimeout(() => {
                        // Chọn tỉnh
                        $('#tinh').find('option').each(function () {
                            if ($(this).text().trim() === userProvince) {
                                $('#tinh').val($(this).val()).trigger('change');

                                setTimeout(() => {
                                    $('#huyen').find('option').each(function () {
                                        if ($(this).text().trim() === userDistrict) {
                                            $('#huyen').val($(this).val()).trigger('change');

                                            setTimeout(() => {
                                                $('#xa').find('option').each(function () {
                                                    if ($(this).text().trim() === userWard) {
                                                        $('#xa').val($(this).val()).trigger('change');
                                                    }
                                                });
                                            }, 1000);
                                        }
                                    });
                                }, 1000);
                            }
                        });
                    }, 1000);
                },
                error: function () {
                    Toast.fire({
                        icon: 'error',
                        title: "❌ Không thể tải thông tin khách hàng."
                    });
                }
            });
        }


