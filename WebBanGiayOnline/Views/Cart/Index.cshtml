@section Scripts{
    <script>
              setTimeout(function () {
            var errorMessage = document.getElementById("errorMessage");
            if (errorMessage) {
                errorMessage.style.display = "none";
            }
        }, 3000);
             $(document).ready(function () {
            // Khi nhấn nút chọn mã giảm giá
            $('.selectDiscount').click(function () {
                $.ajax({
                    url: "/Cart/GetDiscounts",
                    type: "GET",
                    success: function (data) {
                        let html = "";
                        data.forEach(discount => {
                                   let donVi = discount.loai_phieu_giam_gia === 0 ? "VNĐ" : "%";
        let giaTriHienThi = discount.loai_phieu_giam_gia === 0
            ? discount.gia_tri_giam.toLocaleString() + " " + donVi
            : discount.gia_tri_giam + "%"; // không cần format nếu là %

        html += `<li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>
                        ${discount.ten_phieu_giam_gia} - Giảm ${giaTriHienThi}
                        (Tối đa: ${discount.so_tien_giam_toi_da.toLocaleString()} VNĐ)
                    </span>
                    <button class="btn btn-primary btn-sm applyDiscount"
                            data-id="${discount.id}"
                            data-value="${discount.gia_tri_giam}"
                            data-giam="${discount.so_tien_giam_toi_da}"
                            data-type="${discount.loai_phieu_giam_gia}">
                        Chọn
                    </button>
                 </li>`;

                        });
                        $('#discountList').html(html);
                        $('#discountModal').modal('show');
                    }
                });
            });

            $(document).on('click', '.applyDiscount', function () {
                let discountValue = $(this).data('value');
                let discountId = $(this).data('id');
                let discountMax = $(this).data('giam');
                let discountType = $(this).data('type'); 

                $('.discountCodeInput').val(discountType === 0
                    ? `Giảm ${discountValue.toLocaleString()} VNĐ`
                    : `Giảm ${discountValue}%`);

                let subtotal = @Model.Sum(x => x.ThanhTien);
                let discountAmount = 0;

                if (discountType === 0) {
                    // Giảm cố định theo số tiền
                    discountAmount = Math.min(discountValue, subtotal);
                } else {
                    // Giảm theo %
                    discountAmount = subtotal * (discountValue / 100);
                    if (discountAmount > discountMax) {
                        discountAmount = discountMax;
                    }
                }

                let newTotal = subtotal - discountAmount;

                $('#totalPrice').text(newTotal.toLocaleString() + " VNĐ");

                $.ajax({
                    url: "/Cart/ApplyDiscount",
                    type: "POST",
                    data: {
                        totalPrice: newTotal,
                        nameDiscount: discountId
                    },
                    success: function (response) {
                        if (response.success) {
                            console.log("Giảm giá áp dụng thành công!");
                        } else {
                            alert("Lỗi: " + response.message);
                        }
                    }
                });

                $('#discountModal').modal('hide');
            });
        });


            $(document).ready(function () {
                        $(".product-quantity").on("change", function () {
            var input = $(this);
            var newQuantity = parseInt(input.val());
            var productId = input.data("id");

            if (isNaN(newQuantity) || newQuantity < 1) {
                newQuantity = 1;
                input.val(newQuantity);
            }

            $.ajax({
                url: "/Cart/UpdateQuantity",
                type: "POST",
                data: { id: productId, quantity: newQuantity },
                success: function (response) {
                    if (response.success) {
                        $(`#total-${productId}`).text(response.newTotal.toLocaleString() + " VNĐ");
                        $("#totalPrice1").text(response.totalCart.toLocaleString() + " VNĐ");
                        $("#totalPrice").text(response.totalCart.toLocaleString() + " VNĐ");
                    } else {
                        alert("Lỗi: " + response.message);
                    }
                },
                error: function () {
                    alert("Có lỗi xảy ra!");
                }
            });
        });

            $(".updateQuantity").click(function () {
                var button = $(this);
                var productId = button.data("id");
                var type = button.data("type");
                var input = $(`.product-quantity[data-id='${productId}']`);
                var currentQuantity = parseInt(input.val());
                input.val(currentQuantity);
                 if (isNaN(currentQuantity) || currentQuantity < 1) {
                currentQuantity = 1;
                input.val(currentQuantity);
            }

                $.ajax({
                    url: "/Cart/UpdateQuantity",
                    type: "POST",
                    data: { id: productId, quantity: currentQuantity },
                    success: function (response) {
                        if (response.success) {
                            var newTotal = response.newTotal;
                            $(`#total-${productId}`).text(newTotal.toLocaleString() + " VNĐ");
                            $("#totalPrice1").text(response.totalCart.toLocaleString() + " VNĐ");
                            $("#totalPrice").text(response.totalCart.toLocaleString() + " VNĐ");
                         location.reload();
                        } else {
                            alert("Lỗi: " + response.message);
                        }
                    },
                    error: function () {
                        alert("Có lỗi xảy ra!");
                    }
                });
            });
        });
      
    </script>

