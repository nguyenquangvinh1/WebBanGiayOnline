</div>
@section Scripts {
    <script>
		const stripPrefix = str => str?.replace(/^Tỉnh\s+|^Thành phố\s+/i, '').trim();

		// Sau khi trang load
		$(document).ready(function () {
			const userClaims = {
				name: '@User.FindFirst("name")?.Value',
				email: '@User.FindFirst("email")?.Value',
				phone: '@User.FindFirst("SDT")?.Value',
				province: stripPrefix(@Html.Raw(Json.Serialize(User.FindFirst("province")?.Value))),
				district: @Html.Raw(Json.Serialize(User.FindFirst("district")?.Value)),
				ward: stripPrefix(@Html.Raw(Json.Serialize(User.FindFirst("ward")?.Value))),
				address: '@User.FindFirst("address")?.Value'

				
			};

			console.log("✅ userClaims:", userClaims);
		});

	</script>

}
