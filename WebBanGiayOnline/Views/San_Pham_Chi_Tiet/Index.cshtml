    <script>
        $(document).ready(function () {
                 // Hàm lọc sản phẩm
        window.applyFilter = function () {
            console.log("📌 Hàm applyFilter đã chạy!");

            let filters = {};
                let debounceTimer;

                // Khi người dùng đang kéo thanh range (thay đổi tức thì)
                // Khi kéo thanh range: cập nhật giá trị hiển thị ngay
                $(document).on('input', '#rangeInput', function () {
                    $('#amount').text($(this).val());
                    console.log("📌 Cập nhật giá trị khi kéo:", $(this).val());
                });

                // Khi dừng kéo thanh range: thực hiện lọc
                $(document).on('change', '#rangeInput', function () {
                    clearTimeout(debounceTimer);
                    debounceTimer = setTimeout(() => {
                        console.log("📌 Gửi filter sau khi dừng kéo.");
                        window.applyFilter();
                    }, 300);
                });

            // Lấy dữ liệu từ tất cả select box
            $('select.filter-select').each(function () {
                let id = $(this).attr('id');
                let value = $(this).val();
                console.log(`🎯 Lọc ID: ${id}, Giá trị: ${value}`);

                if (value && value !== '') {
                    let paramName = id.replace("filter", "").charAt(0).toLowerCase() + id.replace("filter", "").slice(1);
                    filters[paramName] = value;
                }
            });
                // Lấy dữ liệu từ ô tìm kiếm
                let searchValue = $('#searchProduct').val().trim();
                if (searchValue !== '') {
                    filters.tenSanPham = searchValue;
                }
                // Lấy dữ liệu khoảng giá
                let maxPrice = $('#rangeInput').val();
                if (maxPrice && parseInt(maxPrice) > 0) {
                    filters.maxPrice = maxPrice;
                }

            console.log("📌 Dữ liệu lọc gửi đi:", filters);

            let queryString = $.param(filters);
            console.log("🔗 URL lọc: /San_Pham_Chi_Tiet/Filter?" + queryString);

            window.location.href = '/San_Pham_Chi_Tiet/Filter?' + queryString;
        };

         // Bắt sự kiện khi nhấn Enter trong ô tìm kiếm
        $('#searchProduct').keypress(function (e) {
            if (e.which === 13) { // 13 = Enter key
                e.preventDefault();
                applyFilter();
            }
        });
             // Lọc ngay khi chọn dropdown
        $('select.filter-select').change(function () {
            applyFilter();
        });

        // Giữ lại giá trị đã chọn sau khi tải trang
        $('select.filter-select').each(function () {
