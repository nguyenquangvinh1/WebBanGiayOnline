@model WebBanGiay.Models.ViewModel.LoginViewmodel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = null; 
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


<div class="d-flex justify-content-center align-items-center vh-100" style="background: url(/coloshop-master/images/anhdep.jpg) center/cover no-repeat; filter: brightness(0.8);">
    <div class="p-5 shadow-lg rounded text-center" style="width: 450px; padding: 60px; background-color: #7cc500;">
        <h3 class="fw-bold text-white">Sign In</h3>
        <form asp-action="Login" method="post">
            <div class="mb-4">
                <input type="text" class="form-control form-control-lg" id="Username" name="Username" required placeholder="Tên đăng nhập" />
            </div>
            <div class="mb-4 position-relative">
                <input type="password" class="form-control form-control-lg" id="Password" name="Password" required placeholder="Mật khẩu" />
                
            </div>
            <button type="submit" class="btn btn-light w-100 rounded-pill btn-lg text-primary">Login</button>
            <div class="mt-4">
                <a href="#" asp-controller="Taikhoan" asp-action="ForgotPassword"
                   class="text-white text-decoration-none">Quên <span class="fw-bold">mật khẩu ?</span></a>
            </div>
            <div>
                <a asp-controller="Taikhoan" asp-action="Register" class="text-white text-decoration-none">Tạo <span class="fw-bold">tài khoản mới?</span></a>
            </div>
        </form>
    </div>
</div>



