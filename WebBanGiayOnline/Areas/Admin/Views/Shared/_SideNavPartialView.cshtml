<!-- Main Sidebar Container -->

<style>


    /* Đổi nền sidebar thành trắng và chữ màu đen */
    .main-sidebar {
        background-color: #ffffff !important;
        color: #000;
        border-radius: 5px;
        /* Thêm viền xám 1px (tùy ý) */
        border: 1px solid #ccc;
        /* Tạo khoảng cách để nhìn thấy góc bo */
        /* margin: 10px; */
        /* Nếu muốn ẩn nội dung tràn (tránh lỗi hiển thị) */
        overflow: hidden;
    }
        /* Brand Link: logo và text */
        .main-sidebar .brand-link {
            width: 100%;
            height: 120px; /* Tăng từ 80px lên 120px (hoặc hơn) */
            background-color: #fff;
            background-image: url("@Url.Content("~/images/nhanvien/logo.png")");
            background-repeat: no-repeat;
            background-position: center;
            background-size: contain; /* Giữ nguyên tỉ lệ, không cắt ảnh */
            overflow: hidden;
        }

            /* Bỏ giới hạn mặc định của AdminLTE (nếu có) và cho ảnh phủ đầy khung */
            .main-sidebar .brand-link .brand-image {
                display: block;
                width: 80% !important;
                height: 80% !important;
                max-width: none !important;
                max-height: none !important;
                object-fit: cover; /* Phủ đầy khung (có thể bị crop nếu khác tỉ lệ) */
                border-radius: 0 !important;
                object-fit: cover;
            }
        /* Menu link trong sidebar: chữ màu đen, hover nền nhạt */
        .main-sidebar .nav-sidebar .nav-link {
            color: #000 !important;
        }

            .main-sidebar .nav-sidebar .nav-link:hover {
                background-color: #f1f1f1 !important;
                color: #333 !important;
            }

        /* Nếu có dropdown, bạn cũng có thể thêm hover cho nav-treeview */
        .main-sidebar .nav-treeview .nav-link {
            color: #000 !important;
        }

       


            .main-sidebar .nav-treeview .nav-link:hover {
                background-color: #f9f9f9 !important;
                color: #333 !important;
            }

</style>
